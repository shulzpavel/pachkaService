{
  "id": null,
  "uid": "pachka-overview",
  "title": "Pachka Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "Services up",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 6 },
      "targets": [
        {
          "expr": "up{job=\"pachka-services\"}",
          "legendFormat": "{{instance}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Latency p95 by service",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, service))",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Requests by status",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total[5m]))",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Forward duration by target/result",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(forward_request_duration_seconds_bucket[5m])) by (le, target, result))",
          "legendFormat": "{{target}} {{result}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Queue size (notifier)",
      "gridPos": { "x": 12, "y": 12, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "notifier_queue_length",
          "legendFormat": "queue"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Queue size (gateway)",
      "gridPos": { "x": 18, "y": 12, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "gateway_queue_length",
          "legendFormat": "queue"
        }
      ]
    },
    {
      "type": "graph",
      "title": "4xx rate by service (excl 404)",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{status=~\"4..\",status!~\"404\"}[5m])) / sum by (service) (rate(http_requests_total[5m]))",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Webhook 400 rate",
      "gridPos": { "x": 12, "y": 18, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_requests_total{service=\"gateway\",path=\"/jira/webhook\",status=\"400\"}[5m])",
          "legendFormat": "400"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Webhook 404 rate",
      "gridPos": { "x": 18, "y": 18, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_requests_total{path=\"/jira/webhook\",status=\"404\"}[5m])",
          "legendFormat": "404"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Circuit breaker state",
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "gateway_circuit_breaker_state",
          "legendFormat": "gateway {{target}}"
        },
        {
          "expr": "notifier_circuit_breaker_state",
          "legendFormat": "notifier {{target}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Pachka API latency p95",
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(forward_request_duration_seconds_bucket{service=\"notifier\",target=\"pachka\",result=\"ok\"}[5m])) by (le))",
          "legendFormat": "pachka"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Gateway in-flight vs max",
      "gridPos": { "x": 0, "y": 30, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "gateway_in_flight",
          "legendFormat": "in_flight"
        },
        {
          "expr": "gateway_max_concurrency",
          "legendFormat": "max"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Gateway queue overflow (5m)",
      "gridPos": { "x": 12, "y": 30, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "increase(gateway_queue_overflow_total[5m])",
          "legendFormat": "overflow"
        }
      ]
    }
  ]
}
